<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tids.clikonservice">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClikonService"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.TechnicianProfileActivity"
            android:exported="true" />
        <activity
            android:name=".activity.CaptureActivity"
            android:clearTaskOnLaunch="true"
            android:exported="true"
            android:screenOrientation="sensorPortrait"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".activity.DailyReportActivity" />
        <activity android:name=".activity.SearchProductActivity" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:theme="@style/Theme.AppCompat.NoActionBar"
                    android:windowSoftInputMode="stateHidden" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.StartServiceActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ServiceStatusTechActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ReceivedProductActivity"
            android:exported="true" />
        <activity android:name=".activity.TechnicianHomeActivity" />
        <activity android:name=".activity.StoreActivity" />
        <activity android:name=".activity.CartActivity" />
        <activity android:name=".activity.DriversHomeActivity" />
        <activity android:name=".activity.DemoPagenationActivity" />
        <activity android:name=".activity.ServiceStatusMainActivity" />
        <activity android:name=".activity.ServiceStatusSvActivity" />
        <activity android:name=".activity.RegistrationActivity" />
        <activity android:name=".activity.StaffHomeActivity" />
        <activity android:name=".activity.LoginActivity" />
    </application>

</manifest>