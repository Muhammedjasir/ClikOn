<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".activity.driver.EditOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clikon_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_bg2"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="70dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_box"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Product Details"
                                    android:paddingLeft="8dp"
                                    android:textSize="17sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary_color"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/ic_shape1"
                                android:orientation="horizontal">
                                <AutoCompleteTextView
                                    android:id="@+id/act_search_merchant_area"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableEnd="@drawable/ic_arrow_down"
                                    android:drawableTint="@color/primary_color"
                                    android:background="@android:color/transparent"
                                    android:editable="true"
                                    android:completionThreshold="0"
                                    android:ellipsize="end"
                                    android:ems="3"
                                    android:hint="Search merchant area"
                                    android:textColorHint="@color/lite_white"
                                    android:paddingLeft="15dp"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:minHeight="50dp"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_search_white"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/ic_shape1"
                                android:orientation="horizontal">
                                <AutoCompleteTextView
                                    android:id="@+id/edt_search_merchant"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableEnd="@drawable/ic_arrow_down"
                                    android:drawableTint="@color/primary_color"
                                    android:background="@android:color/transparent"
                                    android:editable="true"
                                    android:completionThreshold="0"
                                    android:ellipsize="end"
                                    android:ems="3"
                                    android:hint="Search merchant"
                                    android:textColorHint="@color/lite_white"
                                    android:paddingLeft="15dp"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:minHeight="50dp"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_search_white"/>
                            </LinearLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/ic_edt_txt_bg"
                                android:textColorHint="@color/light_gray">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_reference_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:hint="Reference Number"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:minHeight="30dp"
                                    android:textColor="@color/light_gray"
                                    android:textSize="14sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/ic_shape1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/ic_product_icon"/>
                                <AutoCompleteTextView
                                    android:id="@+id/edt_search_product"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableEnd="@drawable/ic_arrow_down"
                                    android:drawableTint="@color/primary_color"
                                    android:background="@android:color/transparent"
                                    android:editable="true"
                                    android:completionThreshold="0"
                                    android:ellipsize="end"
                                    android:ems="3"
                                    android:hint="Search product"
                                    android:textColorHint="@color/lite_white"
                                    android:drawablePadding="3dp"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:minHeight="50dp"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_search_white"/>
                            </LinearLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/ic_edt_txt_bg"
                                android:textColorHint="@color/light_gray">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_serial_num"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:hint="Serial Number"
                                    android:maxLines="1"
                                    android:minHeight="30dp"
                                    android:textColor="@color/light_gray"
                                    android:textSize="14sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/ic_edt_txt_bg"
                                android:textColorHint="@color/light_gray">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_batch_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:hint="Batch Number"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:minHeight="30dp"
                                    android:textColor="@color/light_gray"
                                    android:textSize="14sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <AutoCompleteTextView
                                android:id="@+id/act_search_product_condition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="true"
                                android:completionThreshold="0"
                                android:ellipsize="end"
                                android:ems="3"
                                android:hint="Product Condition"
                                android:layout_marginTop="7dp"
                                android:paddingLeft="17dp"
                                android:background="@drawable/ic_edt_txt_bg"
                                android:textColorHint="@color/light_gray"
                                android:textColor="@color/light_gray"
                                android:textSize="14sp"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:minHeight="50dp" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/ic_edt_txt_bg"
                                android:textColorHint="@color/light_gray">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_complaint"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:hint="Complaint"
                                    android:minHeight="30dp"
                                    android:inputType="textMultiLine"
                                    android:textColor="@color/light_gray"
                                    android:textSize="14sp" />

                            </com.google.android.material.textfield.TextInputLayout>
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_update_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|right"
                                android:background="@drawable/button_bg"
                                android:text="Update"
                                android:minWidth="115dp"
                                android:layout_margin="10dp"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:id="@+id/cv_customer_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <com.github.florent37.expansionpanel.ExpansionHeader
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                app:expansion_headerIndicator="@id/headerIndicator"
                                app:expansion_layout="@id/expansionLayout"
                                app:expansion_toggleOnClick="true">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <!-- HEADER -->
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_person"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Customer Details"
                                        android:paddingLeft="8dp"
                                        android:textSize="17sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/dark_gray"/>

                                    <View
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:layout_gravity="center"/>
                                    <!-- HEADER INDICATOR -->
                                    <ImageView
                                        android:adjustViewBounds="true"
                                        android:id="@+id/headerIndicator"
                                        android:layout_gravity="center_vertical|right"
                                        android:layout_height="40dp"
                                        android:layout_width="40dp"
                                        app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />
                                </LinearLayout>

                            </com.github.florent37.expansionpanel.ExpansionHeader>
                            <com.github.florent37.expansionpanel.ExpansionLayout
                                android:id="@+id/expansionLayout"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Home Service"
                                            android:paddingRight="8dp"
                                            android:textSize="17sp"
                                            android:textStyle="normal"
                                            android:textColor="@color/dark_gray"/>
                                        <com.google.android.material.switchmaterial.SwitchMaterial
                                            android:id="@+id/sw_home_shop"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:checked="true"
                                            android:layout_gravity="center_vertical" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Shop Service"
                                            android:paddingLeft="8dp"
                                            android:textSize="17sp"
                                            android:textStyle="normal"
                                            android:textColor="@color/dark_gray"/>

                                    </LinearLayout>
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="7dp"
                                        android:background="@drawable/ic_edt_txt_bg"
                                        android:textColorHint="@color/light_gray">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/ed_customer_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:hint="Name"
                                            android:inputType="text"
                                            android:maxLines="1"
                                            android:minHeight="30dp"
                                            android:textColor="@color/light_gray"
                                            android:textSize="14sp" />
                                    </com.google.android.material.textfield.TextInputLayout>
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="7dp"
                                        android:background="@drawable/ic_edt_txt_bg"
                                        android:textColorHint="@color/light_gray">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/ed_customer_contact"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:hint="Mobile Number"
                                            android:inputType="phone"
                                            android:maxLines="1"
                                            android:minHeight="30dp"
                                            android:textColor="@color/light_gray"
                                            android:textSize="14sp" />
                                    </com.google.android.material.textfield.TextInputLayout>
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="7dp"
                                        android:background="@drawable/ic_edt_txt_bg"
                                        android:textColorHint="@color/light_gray">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/ed_customer_email"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:hint="Email Address"
                                            android:inputType="textEmailAddress"
                                            android:maxLines="1"
                                            android:minHeight="30dp"
                                            android:textColor="@color/light_gray"
                                            android:textSize="14sp" />
                                    </com.google.android.material.textfield.TextInputLayout>
                                    <AutoCompleteTextView
                                        android:id="@+id/act_search_area"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:editable="true"
                                        android:completionThreshold="0"
                                        android:ellipsize="end"
                                        android:ems="3"
                                        android:hint="Area"
                                        android:layout_marginTop="7dp"
                                        android:paddingLeft="17dp"
                                        android:background="@drawable/ic_edt_txt_bg"
                                        android:textColorHint="@color/light_gray"
                                        android:textColor="@color/light_gray"
                                        android:textSize="14sp"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:minHeight="50dp" />
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="7dp"
                                        android:background="@drawable/ic_edt_txt_bg"
                                        android:textColorHint="@color/light_gray">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/ed_customer_address"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/transparent"
                                            android:hint="Customer Address"
                                            android:maxLines="1"
                                            android:minHeight="30dp"
                                            android:textColor="@color/light_gray"
                                            android:textSize="14sp" />
                                    </com.google.android.material.textfield.TextInputLayout>
                                    <androidx.appcompat.widget.AppCompatButton
                                        android:id="@+id/btn_update_cusomer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|right"
                                        android:background="@drawable/button_bg"
                                        android:text="Update"
                                        android:minWidth="115dp"
                                        android:layout_margin="10dp"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </com.github.florent37.expansionpanel.ExpansionLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

</RelativeLayout>