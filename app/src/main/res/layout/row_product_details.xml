<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="right"-->
<!--                    android:src="@drawable/ic_green_tick"/>-->
<!--            </LinearLayout>-->
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>